# Set project root
export PROJECT_ROOT="$PWD"
export PATH="$PROJECT_ROOT/code/script:$PATH"

# Activate galenv
source ~/.galenv/bin/galenv-activate

# Activate conda env
export PROJECT_CONDA="$PROJECT_ROOT/.conda"
if [ -d "$PROJECT_CONDA/conda-meta" ]; then
    source "$PROJECT_ROOT/env/enable-conda"
    conda activate "$PROJECT_CONDA"
    export PATH="$PROJECT_CONDA/bin:$PATH"
fi
