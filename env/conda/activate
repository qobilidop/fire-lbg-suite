echo "conda" > "$LOCAL_ENV_FILE"

export LOCAL_CC=gcc
export LOCAL_CXX=g++
export LOCAL_FC=gfortran

export OMPI_CC=gcc
export OMPI_CXX=g++
export OMPI_FC=gfortran
export LOCAL_MPICC=mpicc
export LOCAL_MPICXX=mpicxx
export LOCAL_MPIFC=mpifort

export LOCAL_CFLAGS=-O3
export LOCAL_LDFLAGS=-Wl,-rpath,"$LOCAL_CONDA_PREFIX/lib"
export LOCAL_MPIFLAGS=
export LOCAL_OMPFLAGS=-fopenmp

export LOCAL_FFTW3_INC="$LOCAL_CONDA_PREFIX/include"
export LOCAL_FFTW3_LIB="$LOCAL_CONDA_PREFIX/lib"
export LOCAL_GSL_INC="$LOCAL_CONDA_PREFIX/include"
export LOCAL_GSL_LIB="$LOCAL_CONDA_PREFIX/lib"
export LOCAL_HDF5_INC="$LOCAL_CONDA_PREFIX/include"
export LOCAL_HDF5_LIB="$LOCAL_CONDA_PREFIX/lib"
