export LOCAL_OMPFLAGS=-qopenmp

export LOCAL_FFTW3_INC="$FFTW3_INCLUDE"
export LOCAL_FFTW3_LIB="$FFTW3_LIB"
export LOCAL_GSL_INC=
export LOCAL_GSL_LIB=
export LOCAL_HDF5_INC="$HDF5_HOME/include"
export LOCAL_HDF5_LIB="$HDF5_HOME/lib"
